{
  "project": {
    "name": "MeuProjeto",
    "instructionsDir": ".github/instructions",
    "useRag": true,
    "rag": {
      "paths": [
        ".github/instructions",
        "docs",
        "README.md",
        "src"
      ],
      "excludeGlobs": [
        "**/node_modules/**",
        "**/.next/**",
        "**/dist/**"
      ],
      "chunkSize": 1000,
      "chunkOverlap": 150,
      "embeddings": "auto"
    }
  },
  "llm": {
    "defaultProvider": "deepseek",
    "models": {
      "anthropic": "claude-3-haiku-20240307",
      "openai": "gpt-4o-mini",
      "ollama": "qwen2.5-coder:7b",
      "deepseek": "deepseek-coder"
    },
    "pricingUSDper1kTokens": {
      "anthropic:claude-3-haiku-20240307": {
        "input": 0.25,
        "output": 1.25
      },
      "openai:gpt-4o-mini": {
        "input": 0.15,
        "output": 0.6
      },
      "ollama:qwen2.5-coder:7b": {
        "input": 0.0,
        "output": 0.0
      },
      "deepseek:deepseek-coder": {
        "input": 0.14,
        "output": 0.28
      }
    },
    "budget": {
      "appMonthlyUSD": 30,
      "perRunUSD": 0.2,
      "policy": "prefer-cheap"
    }
  },
  "trello": {
    "enabled": true,
    "key": "TRELLO_KEY",
    "token": "TRELLO_TOKEN",
    "boardId": "BOARD_ID",
    "columns": {
      "backlog": "Backlog",
      "selected": "Selected",
      "inProgress": "In Progress",
      "inReview": "In Review",
      "done": "Done"
    },
    "labelForBug": "bug",
    "labelForFeature": "feature",
    "idPrefix": ""
  },
  "git": {
    "main": "main",
    "releasePrefix": "releases/",
    "featurePrefix": "features/",
    "commitConvention": "conventional"
  },
  "security": {
    "environment": "dev",
    "allowCommands": [
      "npm test",
      "npm run lint",
      "pnpm test",
      "pnpm build"
    ],
    "denyCommands": [
      "rm -rf /",
      "docker system prune -a"
    ],
    "requireApprovalForUnknown": true
  },
  "mcp": {
    "enabled": true,
    "servers": {
      "filesystem": "mcp+local://filesystem",
      "git": "mcp+local://git",
      "fetch": "mcp+local://fetch"
    }
  },
  "pr": {
    "template": ".github/PULL_REQUEST_TEMPLATE.md",
    "autoChecks": {
      "lint": "npm run lint",
      "test": "npm test -- --reporter json"
    },
    "useGitHubCLI": true
  },
  "changelogs": {
    "dir": "./changelogs",
    "byFeatureFile": true
  }
}