{
  "name": "clia",
  "version": "1.0.0",
  "description": "AI Coding Agent CLI with LLM, and RAG integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "clia": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "src/prompts/**/*",
    "config.sample.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p .",
    "dev": "tsc -w -p .",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "rag:index": "node dist/index.js rag",
    "rag:query": "node dist/index.js rag query --q \"test\"",
    "test": "jest"
  },
  "keywords": [
    "ai",
    "cli",
    "agente-de-codificação",
    "llm",
    "rag",
    "trello",
    "refatorar",
    "anthropic",
    "openai",
    "deepseek",
    "ollama"
  ],
  "author": "Bruno",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/clia.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/clia/issues"
  },
  "homepage": "https://github.com/your-username/clia#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/handlebars": "^4.0.40",
    "@types/uuid": "^10.0.0",
    "@xenova/transformers": "^2.16.1",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.6.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "execa": "^9.4.0",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "langchain": "^0.2.12",
    "micromatch": "^4.0.8",
    "minimatch": "^10.0.3",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "ora": "^8.2.0",
    "simple-git": "^3.27.0",
    "uuid": "^11.1.0",
    "hnswlib-node": "^3.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cli-progress": "^3.11.6",
    "@types/jest": "^29.0.0",
    "@types/micromatch": "^4.0.9",
